<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/wood"
    tools:context="com.example.joker.adhd_tmt.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_0"
            android:layout_height="80dp"
            android:layout_width="80dp"/>
        <Button
            android:id="@+id/bt_1"
            android:layout_height="80dp"
            android:layout_width="80dp"/>
        <Button
        android:id="@+id/bt_2"
        android:layout_height="80dp"
        android:layout_width="80dp"/>
        <Button
            android:id="@+id/bt_3"
            android:layout_height="80dp"
            android:layout_width="80dp"/>
        <TextView
            android:layout_height="80dp"
            android:layout_width="80dp" />
        <Button
            android:id="@+id/bt_start"
            android:layout_height="80dp"
            android:layout_width="80dp"
            android:text="START"/>
        <Button
            android:id="@+id/bt_stop"
            android:layout_height="80dp"
            android:layout_width="80dp"
            android:text="STOP"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_4"
            android:layout_height="80dp"
            android:layout_width="80dp"/>
        <Button
            android:id="@+id/bt_5"
            android:layout_height="80dp"
            android:layout_width="80dp"/>
        <Button
        android:id="@+id/bt_6"
        android:layout_height="80dp"
        android:layout_width="80dp"/>
        <Button
            android:id="@+id/bt_7"
            android:layout_height="80dp"
            android:layout_width="80dp"/>
        <TextView
            android:layout_height="80dp"
            android:layout_width="80dp" />
        <TextView
            android:id="@+id/tv_time"
            android:layout_height="80dp"
            android:layout_width="160dp"
            android:textSize="20dp"
            android:text="用时"
            android:textColor="#FFFFFF"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_8"
            android:layout_height="80dp"
            android:layout_width="80dp"/>
        <Button
            android:id="@+id/bt_9"
            android:layout_height="80dp"
            android:layout_width="80dp"/>
        <Button
        android:id="@+id/bt_10"
        android:layout_height="80dp"
        android:layout_width="80dp"/>
        <Button
            android:id="@+id/bt_11"
            android:layout_height="80dp"
            android:layout_width="80dp"/>
        <TextView
            android:layout_height="80dp"
            android:layout_width="80dp" />
        <TextView
            android:id="@+id/tv_error"
            android:layout_height="80dp"
            android:layout_width="160dp"
            android:textSize="20dp"
            android:text="错误个数"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_12"
            android:layout_height="80dp"
            android:layout_width="80dp"/>
        <Button
            android:id="@+id/bt_13"
            android:layout_height="80dp"
            android:layout_width="80dp"/>
        <Button
        android:id="@+id/bt_14"
        android:layout_height="80dp"
        android:layout_width="80dp"/>
        <Button
            android:id="@+id/bt_15"
            android:layout_height="80dp"
            android:layout_width="80dp"/>
        <TextView
            android:layout_height="80dp"
            android:layout_width="80dp" />
        <TextView
            android:id="@+id/tv_acc"
            android:layout_height="80dp"
            android:layout_width="160dp"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
</LinearLayout>
